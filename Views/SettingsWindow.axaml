<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        x:Class="RainbusTools.SettingsWindow"
        Title="SettingsWindow"
        Width="888" Height="566"
        SystemDecorations="None">

    <Grid>
        <!-- Background -->
        <Image Source="/Assets/SettingsBG.png"
               Stretch="UniformToFill"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"/>

        <Grid RowDefinitions="60,*">
            <!-- Toolbar -->
            <Grid Grid.Row="0"
                  Background="Transparent"
                  PointerPressed="TitleBar_OnPointerPressed">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Settings"
                           VerticalAlignment="Center"
                           Foreground="White"
                           Grid.Column="0"
                           Margin="15,0,0,0"
                           Classes="header"/>
                <Button x:Name="CloseButton"
                        Classes="navigation"
                        Grid.Column="1"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Margin="0,5,15,0"
                        Click="CloseButton_Click"/>
            </Grid>

            <!-- Content -->
            <StackPanel Grid.Row="1"
                        Margin="20"
                        Spacing="15"
                        VerticalAlignment="Top">

                <!-- GitHub button + token placeholder -->
                <StackPanel Orientation="Horizontal" Spacing="10" VerticalAlignment="Center">
                    <Button Content="Залогинится" Width="150" Click="SetGitHubToken_Click"/>
                    <TextBlock x:Name="GitHubTokenStatusTextBlock"
                               VerticalAlignment="Center"
                               Foreground="White"
                               Text="Ты не залогинен"/>
                </StackPanel>

                <!-- Discord WebHook -->
                <StackPanel Orientation="Horizontal" Spacing="10" VerticalAlignment="Center">
                    <TextBlock Text="WebHook:" VerticalAlignment="Center" Width="150"/>
                    <TextBox x:Name="DiscordWebHookBox"
                             Classes="framed"
                             Width="300"
                             Height="60"
                             PasswordChar="*"/>
                    <Button x:Name="ToggleWebhookButton"
                            Content="Показать"
                            Width="120"
                            Height="60"
                            VerticalAlignment="Center"
                            Click="ToggleWebhookVisibility_Click"/>
                </StackPanel>

                <!-- Path to localization's repo -->
                <StackPanel Orientation="Horizontal" Spacing="10" VerticalAlignment="Center">
                    <TextBlock Text="Путь к файлам перевода:"
                               VerticalAlignment="Center"
                               Width="150"
                               TextWrapping="Wrap"/>
                    <TextBox x:Name="RepoPathTextBox"
                             Width="300"
                             Height="60"
                             Classes="framed"
                             IsReadOnly="True"/>
                    <Button Content="Выбрать"
                            Click="BrowseFolder_Click"
                            Width="120"
                            Height="60"/>
                </StackPanel>
                
                <!-- Path to limbus company files -->
                <StackPanel Orientation="Horizontal" Spacing="10" VerticalAlignment="Center">
                    <TextBlock Text="Путь к файлам игры:"
                               VerticalAlignment="Center"
                               Width="150"
                               TextWrapping="Wrap"/>
                    <TextBox x:Name="LimbusPathTextBox"
                             Width="300"
                             Height="60"
                             Classes="framed"
                             IsReadOnly="True"/>
                    <Button Content="Выбрать"
                            Click="BrowseLimbusFolder_Click"
                            Width="120"
                            Height="60"/>
                </StackPanel>

            </StackPanel>
        </Grid>
    </Grid>
</Window>
