<UserControl
    d:DesignHeight="800"
    d:DesignWidth="1200"
    mc:Ignorable="d"
    x:Class="RainbusToolbox.Views.Translation.GenericTranslationEditor"
    x:DataType="viewModels:GenericTranslationEditorViewModel"
    xmlns="https://github.com/avaloniaui"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:RainbusToolbox.ViewModels"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid RowDefinitions="Auto,*,Auto">
        <!--  Main Content - Vertical Split  -->
        <Grid
            ColumnDefinitions="*,*"
            Grid.Row="1"
            IsVisible="{Binding IsFileLoaded}"
            Margin="20,10,20,10">

            <!--  Reference Section (Left)  -->
            <Border
                Background="#2A2A2A"
                CornerRadius="8"
                Grid.Column="0"
                Margin="0,0,10,0"
                Padding="15">
                <Panel>
                    <!--  Reference Header  -->
                    <TextBlock
                        FontFamily="{StaticResource MikodacsFont}"
                        FontSize="16"
                        FontWeight="Bold"
                        Foreground="LightBlue"
                        HorizontalAlignment="Center"
                        Margin="0,0,0,10"
                        Text="Reference (Read-Only)"
                        VerticalAlignment="Top" />

                    <!--  Reference JSON Content  -->
                    <ScrollViewer Margin="0,35,0,0">
                        <TextBox
                            AcceptsReturn="True"
                            Background="Transparent"
                            FontFamily="Cascadia Code,Consolas,Courier New"
                            FontSize="12"
                            Foreground="White"
                            IsReadOnly="True"
                            Text="{Binding ReferenceJson}"
                            TextWrapping="NoWrap" />
                    </ScrollViewer>
                </Panel>
            </Border>

            <!--  Editor Section (Right)  -->
            <Border
                Background="#2A2A2A"
                CornerRadius="8"
                Grid.Column="1"
                Margin="10,0,0,0"
                Padding="15">
                <Panel>
                    <!--  Editor Header  -->
                    <StackPanel
                        HorizontalAlignment="Center"
                        Orientation="Horizontal"
                        VerticalAlignment="Top">
                        <TextBlock
                            FontFamily="{StaticResource MikodacsFont}"
                            FontSize="16"
                            FontWeight="Bold"
                            Foreground="LightGreen"
                            Text="Editor (Editable)" />
                        <TextBlock
                            FontSize="12"
                            Foreground="Orange"
                            IsVisible="{Binding HasParseError}"
                            Margin="10,0,0,0"
                            Text="⚠️ Invalid JSON"
                            VerticalAlignment="Center" />
                    </StackPanel>

                    <!--  Editable JSON Content  -->
                    <ScrollViewer Margin="0,35,0,0">
                        <TextBox
                            AcceptsReturn="True"
                            Background="Transparent"
                            FontFamily="Cascadia Code,Consolas,Courier New"
                            FontSize="12"
                            Foreground="White"
                            Text="{Binding EditableJson, Mode=TwoWay}"
                            TextWrapping="NoWrap" />
                    </ScrollViewer>
                </Panel>
            </Border>
        </Grid>
    </Grid>
</UserControl>