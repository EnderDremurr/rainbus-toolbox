<UserControl
    d:DesignHeight="800"
    d:DesignWidth="800"
    mc:Ignorable="d"
    x:Class="RainbusToolbox.Views.StoryTranslationEditor"
    x:DataType="vm:StoryTranslationEditorViewModel"
    xmlns="https://github.com/avaloniaui"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:RainbusToolbox.ViewModels"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid RowDefinitions="Auto,*,Auto,*,Auto">

        <!--  Reference Section  -->
        <Border
            Grid.Row="1"
            IsVisible="{Binding IsFileLoaded}"
            Margin="20,0,20,10">
            <Grid>
                <Image
                    Height="250"
                    HorizontalAlignment="Stretch"
                    Margin="240,0,0,0"
                    Source="avares://RainbusToolbox/Assets/StoryBG.png" />
                <Grid Margin="25,20,25,20">
                    <TextBlock
                        HorizontalAlignment="Stretch"
                        Margin="430,65,20,40"
                        Text="{Binding ReferenceItem.Content}"
                        TextWrapping="Wrap"
                        VerticalAlignment="Stretch" />
                    <TextBlock
                        HorizontalAlignment="Center"
                        Margin="0,0,0,15"
                        Text="{Binding ReferenceItem.Place}"
                        VerticalAlignment="Bottom" />
                    <Grid HorizontalAlignment="Left" VerticalAlignment="Top">
                        <Image
                            Height="225"
                            Margin="0,-40,0,0"
                            Source="avares://RainbusToolbox/Assets/StoryBGName.png"
                            Width="450" />
                        <StackPanel
                            HorizontalAlignment="Center"
                            Margin="0,15,0,15"
                            VerticalAlignment="Center">
                            <TextBlock
                                FontWeight="Bold"
                                HorizontalAlignment="Center"
                                MaxWidth="250"
                                Text="{Binding ReferenceItem.Title}">
                                <TextBlock.RenderTransform>
                                    <RotateTransform Angle="-6" />
                                </TextBlock.RenderTransform>
                            </TextBlock>
                            <TextBlock
                                HorizontalAlignment="Center"
                                MaxWidth="250"
                                Text="{Binding ReferenceItem.Teller}">
                                <TextBlock.RenderTransform>
                                    <RotateTransform Angle="-6" />
                                </TextBlock.RenderTransform>
                            </TextBlock>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Grid>
        </Border>

        <!--  Separator  -->
        <Border
            Background="Transparent"
            Grid.Row="2"
            Height="3"
            Margin="30,5,30,5" />

        <!--  Editor Section  -->
        <Border
            Grid.Row="3"
            IsVisible="{Binding IsFileLoaded}"
            Margin="20,10,20,15">
            <Grid>
                <Image
                    Height="250"
                    HorizontalAlignment="Stretch"
                    Margin="240,0,0,0"
                    Source="avares://RainbusToolbox/Assets/StoryBG.png" />
                <Grid Margin="20,10,20,10">
                    <TextBox
                        AcceptsReturn="True"
                        Background="Transparent"
                        BorderThickness="0"
                        HorizontalAlignment="Stretch"
                        Margin="430,60,20,40"
                        Text="{Binding CurrentItem.Content, Mode=TwoWay}"
                        TextWrapping="Wrap"
                        VerticalAlignment="Stretch" />
                    <TextBox
                        Background="Transparent"
                        BorderThickness="0"
                        HorizontalAlignment="Center"
                        Margin="0,0,0,15"
                        Text="{Binding CurrentItem.Place, Mode=TwoWay}"
                        VerticalAlignment="Bottom" />
                    <Grid HorizontalAlignment="Left" VerticalAlignment="Top">
                        <Image
                            Height="225"
                            Margin="0,-40,0,0"
                            Source="avares://RainbusToolbox/Assets/StoryBGName.png"
                            Width="450" />
                        <StackPanel
                            HorizontalAlignment="Center"
                            Margin="0,15,0,15"
                            VerticalAlignment="Center">
                            <TextBox
                                Background="Transparent"
                                BorderThickness="0"
                                FontWeight="Bold"
                                HorizontalAlignment="Center"
                                Margin="0,0,0,5"
                                MaxWidth="250"
                                Text="{Binding CurrentItem.Title, Mode=TwoWay}">
                                <TextBox.RenderTransform>
                                    <RotateTransform Angle="-6" />
                                </TextBox.RenderTransform>
                            </TextBox>
                            <TextBox
                                Background="Transparent"
                                BorderThickness="0"
                                HorizontalAlignment="Center"
                                IsReadOnly="True"
                                Text="{Binding CurrentItem.Teller}">
                                <TextBox.RenderTransform>
                                    <RotateTransform Angle="-6" />
                                </TextBox.RenderTransform>
                            </TextBox>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Grid>
        </Border>

        <!--  Navigation  -->
        <StackPanel Orientation="Horizontal">
            <Button
                Command="{Binding GoPrevious}"
                CommandParameter="1"
                Content="◀1"
                IsEnabled="{Binding CanGoPrevious}"
                Margin="0,0,10,0"
                Width="200" />
            <Button
                Command="{Binding GoPrevious}"
                CommandParameter="5"
                Content="◀5"
                IsEnabled="{Binding CanGoPreviousFive}"
                Margin="0,0,10,0"
                Width="200" />
            <Button
                Command="{Binding GoPrevious}"
                CommandParameter="10"
                Content="◀10"
                IsEnabled="{Binding CanGoPreviousTen}"
                Margin="0,0,10,0"
                Width="200" />
            <Border
                Background="Transparent"
                CornerRadius="4"
                Padding="12,6">
                <TextBlock
                    FontFamily="{StaticResource MikodacsFont}"
                    FontSize="16"
                    FontWeight="SemiBold"
                    Foreground="White"
                    Text="{Binding NavigationText}"
                    Width="150" />
            </Border>
            <Button
                Command="{Binding GoNext}"
                CommandParameter="1"
                Content="1▶"
                IsEnabled="{Binding CanGoNext}"
                Margin="10,0,0,0"
                Width="200" />
            <Button
                Command="{Binding GoNext}"
                CommandParameter="5"
                Content="5▶"
                IsEnabled="{Binding CanGoNextFive}"
                Margin="10,0,0,0"
                Width="200" />
            <Button
                Command="{Binding GoNext}"
                CommandParameter="10"
                Content="10▶"
                IsEnabled="{Binding CanGoNextTen}"
                Margin="10,0,0,0"
                Width="200" />
        </StackPanel>
    </Grid>
</UserControl>
