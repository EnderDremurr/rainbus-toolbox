<Window
    Title="LoadingWindow"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d"
    x:Class="RainbusToolbox.Views.Misc.LoadingWindow"
    xmlns="https://github.com/avaloniaui"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Border
        Background="White"
        CornerRadius="10"
        Padding="20">
        <StackPanel
            HorizontalAlignment="Center"
            Spacing="10"
            VerticalAlignment="Center">
            <!--  Spinner or ProgressBar  -->
            <ProgressBar
                Height="20"
                IsIndeterminate="True"
                Width="200" />
            <!--  Optional text  -->
            <TextBlock
                FontSize="14"
                HorizontalAlignment="Center"
                Text="Processing..." />
        </StackPanel>
    </Border>
</Window>
