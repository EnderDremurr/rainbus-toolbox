<UserControl
    d:DesignHeight="800"
    d:DesignWidth="1200"
    mc:Ignorable="d"
    x:Class="RainbusToolbox.Views.TranslationTab"
    x:DataType="vm:TranslationTabViewModel"
    xmlns="https://github.com/avaloniaui"
    xmlns:conv="clr-namespace:RainbusToolbox.Utilities.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:RainbusToolbox.ViewModels"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <UserControl.Resources>
        <conv:InverseBoolConverter x:Key="InverseBoolConverter" />
    </UserControl.Resources>

    <Grid RowDefinitions="Auto,*">
        <!--  File Selection Header  -->
        <Border
            Background="Transparent"
            BorderBrush="Transparent"
            BorderThickness="0,0,0,1"
            Grid.Row="0"
            Padding="20,15">

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <!--  Left: File select button  -->
                    <ColumnDefinition Width="*" />
                    <!--  Center: File type text  -->
                    <ColumnDefinition Width="Auto" />
                    <!--  Right: Save button  -->
                </Grid.ColumnDefinitions>

                <!--  Left: Select File Button  -->
                <Button
                    Command="{Binding SelectFileCommand}"
                    Content="Выбрать файл"
                    VerticalAlignment="Center"
                    Width="320" />

                <!--  Center: File type info  -->
                <StackPanel
                    Grid.Column="1"
                    HorizontalAlignment="Center"
                    Orientation="Horizontal"
                    Spacing="10"
                    VerticalAlignment="Center">
                    <TextBlock
                        Foreground="#CCCCCC"
                        Text="Редактируемый файл:"
                        VerticalAlignment="Center" />
                    <TextBlock
                        FontWeight="SemiBold"
                        Foreground="White"
                        Text="{Binding FileName}"
                        VerticalAlignment="Center" />

                    <Border
                        Background="#0E639C"
                        CornerRadius="12"
                        IsVisible="{Binding IsFileLoaded}"
                        Padding="8,4"
                        VerticalAlignment="Center">
                        <TextBlock
                            FontSize="12"
                            FontWeight="SemiBold"
                            Foreground="White"
                            Text="{Binding FileType}" />
                    </Border>
                </StackPanel>

                <!--  Right: Save Button  -->
                <Button
                    Command="{Binding SaveObjectFromCurrentEditorCommand}"
                    Content="Сохранить"
                    Grid.Column="2"
                    IsEnabled="{Binding IsFileLoaded}"
                    VerticalAlignment="Center"
                    Width="320" />
            </Grid>
        </Border>


        <!--  Dynamic Editor Content  -->
        <ContentControl
            Content="{Binding CurrentEditor}"
            Grid.Row="1"
            IsVisible="{Binding IsFileLoaded}" />

        <!--  Welcome / Empty State  -->
        <Border Grid.Row="1" IsVisible="{Binding IsFileLoaded, Converter={StaticResource InverseBoolConverter}}">
            <StackPanel
                HorizontalAlignment="Center"
                Spacing="20"
                VerticalAlignment="Center">
                <TextBlock
                    FontSize="28"
                    FontWeight="Bold"
                    Foreground="#CCCCCC"
                    HorizontalAlignment="Center"
                    Text="Редактор перевода" />
                <TextBlock
                    FontSize="16"
                    Foreground="#999999"
                    HorizontalAlignment="Center"
                    Text="Нужно выбрать файл" />

                <StackPanel
                    HorizontalAlignment="Center"
                    Margin="0,20,0,0"
                    Orientation="Horizontal"
                    Spacing="30" />
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
